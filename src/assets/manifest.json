{
	"name": "My Extension",
	"version": "1.0.0",
	"manifest_version": 2,
	"description": "My Extension",
	"icons": {
		"16": "icon.png",
		"48": "icon.png",
		"128": "icon.png"
	},
	"browser_action": {
		"default_icon": "icon.png",
		"default_popup": "popup.html"
	},
	"permissions": ["activeTab", "storage", "tabs", "scripting"]
}
